.PHONY = all

CC=gcc
SRC=$(wildcard *.c)
OBJ=$(SRC:.c=.o)
NAME=holberton

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $@

%.o: %.c
	$(CC) -c -o $@ $<

