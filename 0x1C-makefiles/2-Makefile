.PHONY = all

CC=gcc
SRC=main.c holberton.c
OBJ=$(SRC:.c=.o)
NAME=holberton

all: $(NAME)

%.o: %.c %.h
	$(CC) -c $^

$(NAME): $(OBJ)
	$(CC) $^ -o $@

